<h1>Charts</h1>

<div class="well">
<%= form_for_filterrific @filterrific do |f| %>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        Search
        <%= f.text_field(
          :search_query, class: "form-control filterrific-periodically-observed"
        ) %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        Height Less Than
        <%= f.number_field(:with_height_lte, class: "form-control filterrific-periodically-observed") %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        Width Less Than
        <%= f.number_field(:with_width_lte, class: "form-control filterrific-periodically-observed") %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        Price Less Than
        <%= f.number_field(:with_price_lte, class: "form-control filterrific-periodically-observed") %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
          <%= f.check_box :with_magazine_only %> Magazine Charts only
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
      <%= link_to(
        'Reset filters', reset_filterrific_url, class: 'form-control btn btn-danger'
      ) %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
          <%= f.submit 'Filter', class: 'form-control btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
</div>
<%= render(
  partial: 'charts/list',
  locals: { charts: @charts }
) %>